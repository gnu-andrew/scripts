    JDK_ARCH=amd64;
else
    JDK_ARCH=${ARCH};
fi

case "${JDK_ARCH}" in
    amd64)
	DATA_MODEL=64;
	ENDIAN=little;
	;;
    ppc)
	DATA_MODEL=32;
	ENDIAN=big;
	;;
    ppc64)
	DATA_MODEL=64;
	ENDIAN=big;
	;;
esac

