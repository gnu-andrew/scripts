WORKING_DIR=$HOME/builder
CLASSPATH_INSTALL=$HOME/build/classpath
MAKE_OPTS='-j 9'

create_working_dir()
{
  if [ ! -e $WORKING_DIR ]; then
    mkdir $WORKING_DIR;
  fi
  cd $WORKING_DIR
}

checkout_brandweg()
{
  echo $1 
  if [ ! -e $1 ]; then
    cd `dirname $1`;
    hg clone http://icedtea.classpath.org/hg/brandweg;
  fi
  cd $1
}
