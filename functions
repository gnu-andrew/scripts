create_working_dir()
{
  if [ ! -e $WORKING_DIR ]; then
    mkdir $WORKING_DIR;
  fi
  cd $WORKING_DIR
}

checkout_brandweg()
{
  echo $1 
  if [ ! -e $1 ]; then
    cd `dirname $1`;
    hg clone http://icedtea.classpath.org/hg/brandweg;
  fi
  cd $1
}

if [ ! -e $HOME/projects/scripts/environment ]; then
	echo "Please install an environment";
	exit -1;
else
	. $HOME/projects/scripts/environment;
fi
